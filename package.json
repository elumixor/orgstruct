{
    "name": "angular-boilerplate",
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "build": "ng build",
        "dev": "concurrently \"bun run dev:client\" \"bun run dev:server\"",
        "lint": "bun run eslint --ext .ts .",
        "test": "bun test",
        "dev:client": "NG_APP_URL=$(ip addr show eth0 | grep -oP '(?<=inet\\s)\\d+(\\.\\d+){3}') NG_DEV=true ng serve",
        "dev:server": "NG_DEV=true bun run src/server/main.ts",
        "db:generate": "drizzle-kit generate:pg",
        "db:migrate": "bun run ./src/server/db/migrate.ts",
        "db:update": "bun run db:generate && bun run db:migrate",
        "start": "bun run dist/angular-boilerplate/server/server.mjs"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^17.1.0",
        "@angular/common": "^17.1.0",
        "@angular/compiler": "^17.1.0",
        "@angular/core": "^17.1.0",
        "@angular/forms": "^17.1.0",
        "@angular/platform-browser": "^17.1.0",
        "@angular/platform-browser-dynamic": "^17.1.0",
        "@angular/platform-server": "^17.1.0",
        "@angular/router": "^17.1.0",
        "@angular/ssr": "^17.1.0",
        "@elumixor/angular-server": "^0.3.1",
        "@elumixor/eslint": "^0.1.1",
        "@elumixor/frontils": "^1.4.0",
        "@types/cors": "^2.8.17",
        "cors": "^2.8.5",
        "drizzle-orm": "^0.30.9",
        "express": "^4.18.2",
        "postgres": "^3.4.4",
        "rxjs": "~7.8.0",
        "tslib": "^2.3.0",
        "winston": "^3.13.0",
        "zone.js": "~0.14.3"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^17.1.0",
        "@angular/cli": "^17.1.0",
        "@angular/compiler-cli": "^17.1.0",
        "@ngx-env/builder": "^17.3.0",
        "@types/express": "^4.17.17",
        "@types/node": "^18.18.0",
        "concurrently": "^8.2.2",
        "drizzle-kit": "^0.20.17",
        "typescript": "~5.3.2"
    }
}
